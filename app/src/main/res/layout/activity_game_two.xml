<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/LinearLayout1"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/generalText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:text=" : "
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:padding="16dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp"
                        android:background="@android:color/holo_green_dark"/>
                    <TextView
                        android:id="@+id/soldierText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:text=" : "
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:padding="16dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp"
                        android:background="@android:color/holo_green_dark"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="250dp"
                        android:src="@drawable/roulette_8"
                        android:adjustViewBounds="true"
                        android:id="@+id/rouletteImage"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:id="@+id/imageSelected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-30dp"
                        android:src="@drawable/selected"
                        android:layout_above="@+id/rouletteImage"
                        android:layout_centerHorizontal="true">

                    </ImageView>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <Button android:id="@+id/buttonUp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/up"
                        android:onClick="buttonUp"
                        android:layout_marginLeft="20dp">

                    </Button>

                    <Button android:id="@+id/buttonStart"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:onClick="onClickButtonRotation"
                        android:background="@drawable/start">

                    </Button>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/buttonDown"
                        android:background="@drawable/down"
                        android:layout_marginRight="20dp"
                        android:onClick="buttonDown"

                        />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>